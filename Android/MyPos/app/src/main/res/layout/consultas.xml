<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_weight="0.12" />

    <Button
        android:text="Venta Diaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bVentaDiaria"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:background="@drawable/botonazulrectangular" />

    <Button
        android:text="Consulta Venta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bConsultaVenta"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:background="@drawable/botonazulrectangular" />

    <Button
        android:text="CUADRATURA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bCuadratura"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:background="@drawable/botonazulrectangular" />

    <Button
        android:text="LISTADO DE PRECIOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bListaPrecios"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:background="@drawable/botonazulrectangular"
        android:layout_marginBottom="20dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <Button
            android:text="VOLVER"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/bVolver"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/atras"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="@drawable/botonrojorectangular"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>