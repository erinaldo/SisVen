<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/xRut"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:hint="Ingrese su Rut"
        android:layout_marginTop="15dp"
        android:maxLength="12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:id="@+id/xNombre"
        android:hint="Ingrese su Nombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:id="@+id/xUsuario"
        android:hint="Ingrese su Usuario" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/xContraseña"
        android:hint="Ingrese su Contraseña"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:fontFamily="sans-serif" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <Button
        android:text="REGISTRAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bRegistrar"
        android:background="@drawable/botonnaranjorectangular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="10sp"
        android:drawableLeft="@drawable/llave"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        />


</LinearLayout>