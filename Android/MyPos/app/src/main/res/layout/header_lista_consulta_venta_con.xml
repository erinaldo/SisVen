<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >


    <TextView
        android:id="@+id/fecha"
        android:layout_height="wrap_content"
        android:layout_width="85dp"
        android:layout_weight="1.70"
        android:text="Fecha"
        android:background="#c5d5d3" />


    <TextView
        android:id="@+id/rutcliente"
        android:layout_height="wrap_content"
        android:layout_width="95dp"
        android:layout_weight="0.5"
        android:text="Rut Cliente"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/numdoc"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_weight="1.70"
        android:text="NumDoc"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/montodoc"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_weight="1.70"
        android:text="Total"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/codarticulo"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_weight="1.70"
        android:text="Código"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/cantidadarticulo"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_weight="1.70"
        android:text="Cantidad"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/precioarticulo"
        android:layout_height="wrap_content"
        android:layout_width="90dp"
        android:layout_weight="1.70"
        android:text="Precio"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/ivaarticulo"
        android:layout_height="wrap_content"
        android:layout_width="90dp"
        android:layout_weight="1.70"
        android:text="IVA"
        android:background="#c5d5d3" />

    <TextView
        android:id="@+id/glosaarticulo"
        android:layout_height="wrap_content"
        android:layout_width="210dp"
        android:layout_weight="1.70"
        android:text="Descripción Artículo"
        android:background="#c5d5d3" />


</LinearLayout>