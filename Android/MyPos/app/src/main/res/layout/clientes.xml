<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Ingrese Rut de Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="0.45"
                android:textSize="18sp"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />


            <com.github.pinball83.maskededittext.MaskedEditText
                android:id="@+id/masked_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:mask="##.###.###-#"
                app:notMaskedSymbol="#"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                app:maskIconColor="@color/colorPrimary"
                android:hint="Ingrese Rut de Cliente" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:id="@+id/xNombreCliente"
                android:hint="Ingrese Nombre de Cliente"
                android:maxLength="50" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:id="@+id/xGiroCliente"
                android:hint="Ingrese Giro de Cliente"
                android:maxLength="30" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:id="@+id/xDireccionCliente"
                android:hint="Ingrese DirecciÃ³n de Cliente"
                android:maxLength="30" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:id="@+id/xCiudadCliente"
                android:hint="Ingrese Ciudad de Cliente"
                android:maxLength="30" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:id="@+id/xComunaCliente"
                android:hint="Ingrese Comuna de Cliente"
                android:maxLength="9"
                android:textSize="18sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:id="@+id/xEmailCliente"
                android:hint="Ingrese E-Mail de Cliente"
                android:maxLength="9"
                android:textSize="18sp"
                android:inputType="textEmailAddress" />



            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar12"
                android:visibility="invisible" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Guardar"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bGuardar"
                    android:background="@drawable/botonnaranjorectangular"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ingresar"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="10sp"/>

                <Button
                    android:text="Salir"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bVolver"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/botonrojorectangular"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15sp"
                    android:drawableLeft="@drawable/atras"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_alignBottom="@+id/bAnular" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>