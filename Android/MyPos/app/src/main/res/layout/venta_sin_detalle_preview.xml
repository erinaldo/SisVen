<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="EMITIR BOLETA POR:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_weight="0.03"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:textSize="24sp" />

    <TextView
        android:text="$ 99.999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lMontoPreview"
        android:layout_weight="0.07"
        android:textAlignment="center"
        android:textSize="60sp"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:paddingTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bSi"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_weight="0.03"
            android:background="@drawable/botonazulrectangular"
            android:drawableLeft="@drawable/ok"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="SI"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bNo"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_weight="0.03"
            android:background="@drawable/botonrojorectangular"
            android:drawableLeft="@drawable/salir"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="NO"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>