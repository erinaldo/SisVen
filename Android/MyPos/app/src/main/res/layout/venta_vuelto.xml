<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:layout_height="68dp">

        <TextView
            android:text="Monto Boleta"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="20sp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xMonto"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle"
            android:textSize="36sp"
            android:textAlignment="textEnd"
            android:paddingRight="7dp"
            android:maxLength="9"
            android:layout_marginRight="5dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:layout_height="68dp">

        <TextView
            android:text="Efectivo"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView155"
            android:textSize="20sp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xEfectivo"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle"
            android:textSize="36sp"
            android:textAlignment="textEnd"
            android:paddingRight="7dp"
            android:maxLength="9"
            android:layout_marginRight="5dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:layout_height="68dp">

        <TextView
            android:text="Vuelto"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView165"
            android:textSize="20sp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xVuelto"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle"
            android:textSize="36sp"
            android:textAlignment="textEnd"
            android:paddingRight="7dp"
            android:maxLength="9"
            android:layout_marginRight="5dp"
            android:enabled="false" />

    </LinearLayout>



    <Button
        android:text="EMITIR BOLETA"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bEmitir"
        android:background="@drawable/botonnaranjorectangular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:drawableLeft="@drawable/ticket"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
 />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/bEmitirBoleta"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:layout_marginTop="25dp">

        <Button
            android:text="OCULTAR VUELTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bQuitar"
            android:layout_weight="1"
            style="@style/EstiloBotonAzul"
            android:background="@drawable/botonazulrectangular"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:drawableLeft="@drawable/anular"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bVolver"
            style="@style/EstiloBotonAzul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VOLVER"
            android:background="@drawable/botonrojorectangular"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:drawableLeft="@drawable/atras"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>