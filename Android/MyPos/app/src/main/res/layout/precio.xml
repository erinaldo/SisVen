<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/xCodigoArticulo"
        android:hint="Ingrese Codigo de Artículo"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:maxLength="30" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/xNombreArticulo"
        android:hint="Ingrese Nombre de Artículo"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:maxLength="100" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/xBarra1"
        android:hint="Ingrese Barra 1"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:maxLength="30" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/xBarra2"
        android:hint="Ingrese Barra 2"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:maxLength="30" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/xBarra3"
        android:hint="Ingrese Barra 3"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:maxLength="30" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/xPrecioArticulo"
        android:hint="Ingrese Precio Neto"
        android:maxLength="9"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
         />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar12"
        android:visibility="invisible" />



    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <Button
            android:text="GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bGuardar"
            android:layout_alignBaseline="@+id/bVolver"
            android:layout_alignBottom="@+id/bVolver"
            android:layout_alignParentStart="true"
            android:background="@drawable/botonnaranjorectangular"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="10sp"
            android:drawableLeft="@drawable/ingresar"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"/>
        <Button
            android:text="VOLVER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bVolver"
            android:layout_weight="1"
            android:background="@drawable/botonrojorectangular"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:drawableLeft="@drawable/atras"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>