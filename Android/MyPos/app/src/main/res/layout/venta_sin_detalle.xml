<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/textView"
        android:textSize="45sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />

    <Button
        android:text="Emitir Boleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/bEmitirBoleta"
        android:layout_below="@+id/xMontoBoleta"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botonnaranjorectangular"
        android:drawableLeft="@drawable/ticket"
        android:gravity="center"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:text="Ingrese Monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_marginTop="23dp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="?android:attr/textColorTertiary" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/bEmitirBoleta"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <Button
            android:id="@+id/bVuelto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15sp"
            android:layout_marginStart="15sp"
            android:layout_weight="1"
            android:background="@drawable/botonazulrectangular"
            android:drawableLeft="@drawable/precio"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="VER VUELTO"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="VOLVER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bVolver"
            android:layout_weight="1"
            android:background="@drawable/botonrojorectangular"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:drawableLeft="@drawable/atras"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
             />
    </LinearLayout>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/xMontoBoleta"
        android:textSize="45sp"
        android:textAlignment="textEnd"
        android:maxLength="9"
        android:shadowRadius="3"
        android:background="@drawable/edittextstyle"
        android:paddingRight="15dp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
         />

</RelativeLayout>
